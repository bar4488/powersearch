{
  "name": "powersearch",
  "displayName": "PowerSearch",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cyber-explorer",
          "title": "Cyber Explorer",
          "icon": "resources/cyber.svg"
        }
      ]
    },
    "views": {
      "cyber-explorer": [
        {
          "id": "cyber-explorer.tags",
          "name": "Tags"
        },
        {
          "id": "tag-groups",
          "name": "Tag Groups"
        }
      ]
    },
    "commands": [
      {
        "command": "powersearch.colorSymbol",
        "title": "Color Symbol"
      },
      {
        "command": "powersearch.recolor",
        "title": "Recolor"
      },
      {
        "command": "powersearch.cyberexplorer.chooseColor",
        "title": "Choose Color",
        "icon": "resources/color.svg"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "powersearch.cyberexplorer.chooseColor",
          "when": "viewItem == hidden-tag-item || viewItem == visible-tag-item",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}